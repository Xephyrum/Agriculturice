<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignStart="@+id/resultView"
        android:layout_alignEnd="@+id/resultView"
        android:layout_below="@+id/resultView"

        android:layout_alignLeft="@+id/resultView"
        android:layout_alignRight="@+id/resultView"> <!-- Added these two lines of codes to support API 17 or below-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:text="Possible Disease: "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textColor="@color/RiceDX_green"
                android:layout_marginLeft="5dp"/>

            <TextView
                android:text=""
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/diseasetxt"
                android:layout_marginLeft="20dp"/>

            <TextView
                android:text="Description: "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textColor="@color/RiceDX_green"
                android:layout_marginLeft="5dp"/>

            <TextView
                android:text=""
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/descriptiontxt"
                android:layout_marginLeft="20dp" />

            <TextView
                android:text="How to manage:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textColor="@color/RiceDX_green"
                android:layout_marginLeft="5dp"/>

            <TextView
                android:text=""
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/treatmenttxt"
                android:layout_marginLeft="20dp"/>
        </LinearLayout>
    </ScrollView>

    <ImageView
        android:layout_width="2in"
        android:layout_height="1.5in"
        android:id="@+id/resultView"
        android:layout_marginTop="66dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>
